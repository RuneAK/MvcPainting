@model MvcPainting.Models.Painting

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Title);
}

<h3>@Html.DisplayFor(model => model.Title)</h3>

<div>
    <h4>Painting by @Html.DisplayFor(model => model.Artist.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" style="max-height: 300px;"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medium)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medium)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class="col-sm-10">
            <a asp-area="" asp-controller="Artists" asp-action="Details" asp-route-id="@Model.Artist.Id">@Html.DisplayFor(model => model.Artist.Name)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Museum)
        </dt>
        <dd class="col-sm-10">
            <a asp-area="" asp-controller="Museums" asp-action="Details" asp-route-id="@Model.Museum.Id">@Html.DisplayFor(model => model.Museum.Name)</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">All paintings</a>
</div>
